<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/wg_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_wg_name"
            style="@style/text_view_1"
            android:text="网关名称" />

        <TextView
            android:id="@+id/tv_wg_ip"
            style="@style/text_view_1"
            android:text="网关IP" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_wg_swj_ip"
            style="@style/text_view_1"
            android:text="上位机IP" />

        <TextView
            android:id="@+id/tv_wg_wl_zwym"
            style="@style/text_view_1"
            android:text="子网掩码" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_wg_swj_port"
            style="@style/text_view_1"
            android:text="上位机端口" />

        <TextView
            android:id="@+id/tv_wg_wl_wgip"
            style="@style/text_view_1"
            android:text="网关" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_wg_mac"
                style="@style/text_view_2"
                android:text="MAC地址" />

            <TextView
                android:id="@+id/tv_status"
                style="@style/text_view_2"
                android:text="状态" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/wg_seting"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/btn_style"
                android:text="设置"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/xian_1"
        android:layout_marginTop="5dp" />
</LinearLayout>